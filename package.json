{
	"name": "lumi-server",
	"version": "1.0.0",
	"description": "Lumi backend service with Fastify, Drizzle, Redis, BullMQ and S3",
	"type": "module",
	"main": "dist/server.js",
	"scripts": {
		"dev": "concurrently -n \"API,Worker\" -c \"cyan,magenta\" \"npm run dev:api\" \"npm run dev:workers\"",
		"dev:api": "tsx watch src/server.ts",
		"dev:workers": "tsx watch src/workers/start-workers.ts",
		"build": "tsc",
		"start": "node dist/server.js",
		"start:workers": "node dist/workers/start-workers.js",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push --force",
		"db:studio": "drizzle-kit studio",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"check": "biome check --write . && tsc --noEmit"
	},
	"keywords": [
		"fastify",
		"drizzle",
		"redis",
		"bullmq",
		"s3"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.738.0",
		"@aws-sdk/s3-request-presigner": "^3.738.0",
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^10.0.1",
		"@fastify/env": "^5.0.1",
		"@fastify/helmet": "^12.0.1",
		"@fastify/rate-limit": "^10.1.1",
		"@fastify/swagger": "^9.6.1",
		"@paralleldrive/cuid2": "^3.0.4",
		"@scalar/fastify-api-reference": "^1.40.3",
		"adm-zip": "^0.5.16",
		"bullmq": "^5.37.0",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.3",
		"fastify": "^5.2.0",
		"ioredis": "^5.4.1",
		"mysql2": "^3.15.3",
		"openai": "^6.10.0",
		"pino": "^9.5.0",
		"pino-pretty": "^13.0.0",
		"tencentcloud-sdk-nodejs-ai3d": "^4.1.155",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/adm-zip": "^0.5.7",
		"@types/node": "^22.10.2",
		"@types/supertest": "^6.0.3",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.30.1",
		"supertest": "^7.1.4",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vitest": "^4.0.15"
	}
}
